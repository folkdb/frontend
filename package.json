{
  "name": "@folkdb/frontend",
  "version": "0.0.0",
  "description": "Frontend for FolkDB song collection",
  "author": "Daniel C. Narey",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/folkdb/frontend"
  },
  "type": "module",
  "scripts": {
    "build": "rollup -c && del dist/* && svelte-render",
    "build:dev": "rollup -c && del dist/* && svelte-render --development",
    "merge:next": "git checkout master && git pull && git merge next -s recursive -Xtheirs",
    "serve": "sirv dist -s --port=8080",
    "sync": "git pull && git add . && git commit -m 'automated sync' && git push",
    "test": "npm run build",
    "update": "updtr"
  },
  "dependencies": {
    "@metamodern/copy-typefaces": "^2.0.3",
    "@metamodern/design-system": "^2.0.0",
    "@metamodern/pug-filter-markdown": "^1.0.0",
    "cssnano": "^4.1.10",
    "navaid": "^1.1.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sugarss": "^2.0.0",
    "svelte-preprocess": "^3.7.4",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@metamodern/svelte-render": "^2.0.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "8.0.1",
    "core-js": "^3.6.5",
    "del-cli": "^3.0.0",
    "httpie": "^1.1.2",
    "postcss": "^7.0.32",
    "pug": "^3.0.0",
    "rollup": "^2.18.2",
    "sirv-cli": "^1.0.3",
    "svelte": "^3.23.0",
    "updtr": "^3.1.0"
  },
  "engines": {
    "node": ">=12"
  }
}
