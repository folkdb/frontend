{
  "name": "@folkdb/frontend",
  "version": "0.0.0",
  "description": "Frontend for FolkDB song collection",
  "author": "Daniel C. Narey",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/folkdb/frontend"
  },
  "type": "module",
  "scripts": {
    "build": "rollup -c --silent && del dist/* && svelte-render",
    "build:dev": "rollup -c --silent && del dist/* && svelte-render --development",
    "lint": "eslint src",
    "merge:next": "git checkout master && git pull && git merge next -s recursive -Xtheirs",
    "serve": "sirv dist -s --port=8080",
    "sync": "git pull && git add . && git commit -m 'automated sync' && git push",
    "test": "npm run lint && npm run build",
    "update": "updtr"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@metamodern/copy-typefaces": "^2.0.3",
    "@metamodern/design-system": "^2.0.0",
    "@metamodern/pug-filter-markdown": "^1.0.0",
    "cssnano": "^4.1.10",
    "httpie": "^1.1.2",
    "navaid": "^1.1.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sugarss": "^2.0.0",
    "svelte": "^3.23.2",
    "svelte-preprocess": "^4.0.6",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@metamodern/svelte-render": "^2.0.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "8.0.1",
    "core-js": "^3.6.5",
    "del-cli": "^3.0.0",
    "eslint": "^7.4.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "postcss": "^7.0.32",
    "pug": "^3.0.0",
    "rollup": "^2.19.0",
    "rollup-plugin-terser": "^6.1.0",
    "sirv-cli": "^1.0.3",
    "updtr": "^3.1.0",
    "vextab": "^3.0.6"
  },
  "engines": {
    "node": ">=12"
  }
}
